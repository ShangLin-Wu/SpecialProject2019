<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDarkBrown"
    android:minHeight="22dp">

    <TextView
        android:id="@+id/SelectProductCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Select Product Category"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn3C"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/SelectProductCategory"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="3C"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnCellphone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btn3C"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="CellPhone"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnComputer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnCellphone"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="Computer"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</RelativeLayout>