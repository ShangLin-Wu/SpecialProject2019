<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_Color1"
    tools:context=".Category.categoryClothes">


    <android.support.constraint.ConstraintLayout
        android:layout_width="480dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/clothBack"
            android:layout_width="61dp"
            android:layout_height="51dp"
            android:background="@mipmap/back"
            android:onClick="clickback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <include
            android:id="@+id/include6"
            layout="@layout/defaultbackgroud" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/shirtsLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/shirtimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnShirts"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/shirtimg" />

            <Button
                android:id="@+id/btnShirts"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickShirts"
                android:text="SHIRTS"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/pantsLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shirtsLayout">

            <ImageView
                android:id="@+id/pantimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnPants"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pantsimg" />

            <Button
                android:id="@+id/btnPants"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickPants"
                android:text="PANTS"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/shoesLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pantsLayout">

            <ImageView
                android:id="@+id/shoesimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnShoes"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/shoesimg" />

            <Button
                android:id="@+id/btnShoes"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickShoes"
                android:text="SHOES"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <!--返回鈕-->

</android.support.constraint.ConstraintLayout>