<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDarkBrown"
    android:minHeight="22dp">

    <TextView
        android:id="@+id/CategoryClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:text="Category Clothes"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="110dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnPants"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/CategoryClothes"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="Pants"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnShirts"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnPants"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="Shirts"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintBottom_toTopOf="@+id/btnPants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnShoes"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnShirts"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="Shoes"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</RelativeLayout>