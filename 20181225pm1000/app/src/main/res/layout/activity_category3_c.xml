<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_Color1"
    tools:context=".Category.category3C">


    <android.support.constraint.ConstraintLayout
        android:layout_width="480dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/defaultbackgroud" />

        <Button
            android:id="@+id/clothBack"
            android:layout_width="61dp"
            android:layout_height="51dp"
            android:background="@mipmap/back"
            android:onClick="clickback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cellphoneLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appliancesLayout">

            <ImageView
                android:id="@+id/cellphoneimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCELLPHONE"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cellphoneimg" />

            <Button
                android:id="@+id/btnCELLPHONE"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickCELLPHONE"
                android:text="CELLPHONES AND ACCESSORIES"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/computersLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cellphoneLayout">

            <ImageView
                android:id="@+id/computersimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCOUMPUTER"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/computersimg" />

            <Button
                android:id="@+id/btnCOUMPUTER"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickCOUMPUTER"
                android:text="COUMPUTERS  AND ACCESSORIES"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/appliancesLayout"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/appliancesimg"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnAppliance"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/appliancesimg" />

            <Button
                android:id="@+id/btnAppliance"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC"
                android:fontFamily="@font/nunito_bold"
                android:onClick="clickHOME"
                android:text="Appliances"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <!--返回鈕-->


</android.support.constraint.ConstraintLayout>