<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDarkBrown"
    android:minHeight="22dp">

    <TextView
        android:id="@+id/leaveyesno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:text="Leave This Pageï¼Ÿ"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:fontFamily="@font/comfortaa_light"
        app:layout_constraintBottom_toTopOf="@+id/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/yes"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/leaveyesno"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="@color/fontcolor"
        android:textSize="24sp"
        app:fontFamily="@font/comfortaa_light"
        app:layout_constraintBottom_toTopOf="@+id/no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/yes"
        android:layout_centerHorizontal="true"
        android:background="@color/background_Color1"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="@color/fontcolor"
        android:textSize="24sp"
        app:fontFamily="@font/comfortaa_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />




</RelativeLayout>